{
  "name": "Copy Markdown Link",
  "description": "Copy link in Markdown format.",
  "version": "0.0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+M"
      }
    }
  },
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ]
}